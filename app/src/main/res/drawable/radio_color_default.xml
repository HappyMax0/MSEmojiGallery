<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 选中状态 -->
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="ring"  android:innerRadiusRatio="5"
                    android:thicknessRatio="6"
                    android:useLevel="false">
                    <solid android:color="?attr/colorOnSurface"/>
                    <size android:width="24dp" android:height="24dp" android:gravity="center"/>
                </shape>
            </item>
            <item android:gravity="center">
                <shape android:shape="oval">
                    <solid android:color="@color/skin_default"/>
                    <size android:width="20dp" android:height="20dp" android:gravity="center"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- 未选中状态 -->
    <item>
        <shape android:shape="oval" android:gravity="center">
            <solid android:color="@color/skin_default"/>
            <size android:width="20dp" android:height="20dp" android:gravity="center"/>
        </shape>
    </item>
</selector>
