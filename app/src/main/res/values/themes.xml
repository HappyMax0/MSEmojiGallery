<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MSEmojiGallery" parent="Theme.Material3.DynamicColors.Light.NoActionBar">
        <!-- 设置沉浸式效果，透明状态栏 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Primary brand color. -->
<!--        <item name="colorPrimary">@color/white</item>-->
<!--        <item name="colorPrimaryVariant">@color/white</item>-->
<!--        <item name="colorOnPrimary">@color/black</item>-->
        <!-- Secondary brand color. -->
    <!--    <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>-->
<!--        <item name="colorOnSecondary">@color/black</item>-->
        <!-- Customize your theme here. -->
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#000000</item>
    </style>

    <style name="Theme.MSEmojiGallery.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.MSEmojiGallery.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="statusBarBackground">?attr/colorSurface</item>
    </style>

</resources>